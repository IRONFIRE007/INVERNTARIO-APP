<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ventas</title>
    <!-- Bootstrap core CSS -->
<link href="../css/bootstrap.min.css" rel="stylesheet">
 <!-- Font Awesome cdn -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
 
    <!-- Custom styles for this template -->
    <link href="../css/list.css" rel="stylesheet">
  </head>
  <body>

<div class="container-fluid">
  <div class="row">
    <!-- Contenido principal   -->
    <main class="col-md-9 ms-sm-auto col-lg-12 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h2>LIQOR</h2>
      </div> 



      <a type="button" class="register" href="/register" >
        <i  class="fa fa-user-circle" aria-hidden="true"></i>
      </a>

      <a type="button" class="logout" href="logout" >
        <i class="fa fa-sign-out" aria-hidden="true"></i>
      </a>

      <a type="button" class="back" href="/ventas" >
        <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
      </a>

    
      <div class="create">
        <a href="/ventas/crear"  type="button">Registrar Venta</a>
       </div>
    </main>
  </div>

    <div class="container">
      <% for( let venta= 0; venta < ventas.length; venta++ ) { %>
        <div class="box ven">

          <% for( let producto= 0; producto < productos.length; producto++ ) 
          { %>  
             <% if(productos[producto].id===ventas[venta].producto_id)
             { %> <p>Producto: <%=productos[producto].nombre%></p>  <% }
              %>
             <% } %>
             <p>Cantidad:<%=ventas[venta].cantidad%></p>
  
             <% for( let cliente= 0; cliente < clientes.length; cliente++ ) 
          { %>  
             <% if(clientes[cliente].id===ventas[venta].clientes_id)
             { %> <p>Nombre del cliente: <%=clientes[cliente].nombre%></h3>  <% }
             
              %>
             
             <% } %>
            <p>Desc:<%=ventas[venta].descripcion%></p>
         <p>Fecha:<%=ventas[venta].fecha%></p>
        
 
                    <div class="btn-group-vertical"  >
          
          <form method="post" class="form-inline" action="/ventas/eliminar/<%=ventas[venta].id%>">
              
        <button type="submit" class="btn ">Borrar</button>
        
          </form>
        
                </div>
            </div>
            <% } %>
          </div>
           
      
    </div>

  </body>
</html>