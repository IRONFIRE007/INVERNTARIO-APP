
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Crear Producto</title>
    <!-- Bootstrap CSS -->
    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/signin.css" rel="stylesheet">
  
  </head>
  <body class="text-center">

        
 
    <main class="form-signin">


      <form id="formLogin" action="/product/crear" method="post">


           
       <select name="categoria" >
        <% for( let categoria= 0; categoria < categorias.length; categoria++ ) { %>
         
            <option value=<%=categorias[categoria].id%>><%=categorias[categoria].nombre%></option>
    
        <% } %>
       </select>


       <select name="proveedor" >
         <% for( let proveedor= 0; proveedor < proveedores.length; proveedor++ ) { %>
         
            <option value=<%=proveedores[proveedor].id%>><%=proveedores[proveedor].nombre%></option>
    
        <% } %>
       </select>
        
    
        <div class="form-floating">
          <input type="text" class="" name="nombre"   placeholder="Producto" autocomplete="off">
        </div>

        <div class="form-floating">
            <input type="text" class="descripcion" name="descripcion"   placeholder="Descripcion" autocomplete="off">
          </div>


          <div class="form-floating">
            <input  class="" type="number" name="precio" placeholder="Precio"  autocomplete="off">
          </div>
    
          <div class="form-floating">
            <button type="submit" class="w-100 btn btn-lg ">crear</button>
          </div>
      </form>
    
    </main>

  

  </body>
</html>